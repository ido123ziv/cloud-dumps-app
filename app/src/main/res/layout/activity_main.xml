<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/Hadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome to the AWS Training Center!"
            android:textAlignment="center"
            android:textColor="@color/aws"
            android:textSize="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/gifview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Hadline"
            android:weightSum="4">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            <Button
                    android:id="@+id/button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/aws"
                    android:text="short" />

            <Button
                    android:id="@+id/button2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_dark_background"
                    android:text="med"
                    android:textColor="@android:color/holo_blue_dark" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

            <Button
                    android:id="@+id/button4"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="long"
                    android:background="@color/cardview_dark_background"
                    android:textColor="@android:color/white"/>

            <Button
                    android:id="@+id/button3"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@color/aws"
                    android:text="ex-long" />
        </TableRow>
    </TableLayout>

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="3"
            android:src="@drawable/s3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>